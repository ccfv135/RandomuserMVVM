<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.Friends" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#000000</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>


        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- For Shared Element animation support -->
        <item name="android:windowContentTransitions">true</item>

        <!-- Customize action bar text color -->


        <!-- Customize action bar title text color -->
        <item name="android:actionBarStyle">@style/MyActionBar</item>
    </style>

    <!-- Customize action bar title text color -->
    <style name="MyActionBar" parent="@style/Widget.MaterialComponents.ActionBar.Solid">
        <item name="android:titleTextStyle">@style/MyTitleText</item>
    </style>

    <!-- Customize action bar title text color -->
    <style name="MyTitleText" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">#000000</item>
    </style>

</resources>
